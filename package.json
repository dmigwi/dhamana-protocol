{
  "name": "dhamana-protocol",
  "version": "0.0.1",
  "description": "Contains implementation that run Dhamana bond app on Oasis Sapphire Paratime",
  "main": "truffle-config.js",
  "directories": {
    "test": "contracts/tests/chat.test.js"
  },
  "truffle":"node_modules/.bin/truffle",
  "devlog": "build/deploy_development.log",
  "locallog": "build/deploy_sapphire_localnet.log",
  "testlog": "build/deploy_sapphire_testnet.log",
  "mainlog": "build/deploy_sapphire_mainnet.log",
  "scripts": {
    "compile": "./$npm_package_truffle compile",
    "test": "./$npm_package_truffle test ./contracts/tests/chat.test.js",
    "test_sapphire_localnet": "./$npm_package_truffle test --network sapphire_localnet ./contracts/tests/chat.test.js",
    "deploy_development": "./$npm_package_truffle migrate --network development --describe-json > $npm_package_devlog && pnpm run gen_deployment_config $npm_package_devlog",
    "deploy_sapphire_localnet": "./$npm_package_truffle migrate --network sapphire_localnet --describe-json > $npm_package_locallog && pnpm run gen_deployment_config $npm_package_locallog",
    "deploy_sapphire_mainnet": "./$npm_package_truffle migrate --network sapphire_mainnet --describe-json > $npm_package_mainlog && && pnpm run gen_deployment_config $npm_package_mainlog",
    "deploy_sapphire_testnet": "./$npm_package_truffle migrate --network sapphire_testnet --describe-json > $npm_package_testlog && pnpm run gen_deployment_config $npm_package_testlog",
    "gen_deployment_config": "go run ./deployInfo ",
    "lint": "./node_modules/.bin/solhint --max-warnings 0 'contracts/**/*.sol'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmigwi/dhamana-protocol"
  },
  "author": "dmigwi",
  "license": "ISC",
  "devDependencies": {
    "@truffle/hdwallet-provider": "2.1.13",
    "solhint": "3.4.1",
    "truffle": "5.11.1",
    "truffle-assertions": "0.9.2",
    "web3": "4.0.3"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-paratime": "1.1.1"
  }
}
