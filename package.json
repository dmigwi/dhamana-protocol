{
  "name": "dhamana-protocol",
  "version": "1.0.0",
  "description": "Contains implementation that run Dhamana bond app on Oasis Sapphire Paratime",
  "main": "truffle-config.js",
  "directories": {
    "test": "contracts/tests/chat.test.js"
  },
  "scripts": {
    "compile": "./node_modules/.bin/truffle compile",
    "test": "./node_modules/.bin/truffle test ./contracts/tests/chat.test.js",
    "deploy_sapphire_testnet": "./node_modules/.bin/truffle migrate --network sapphire_testnet",
    "deploy_sapphire_mainnet": "./node_modules/.bin/truffle migrate --network sapphire_mainnet",
    "lint": "./node_modules/.bin/solhint --max-warnings 0 'contracts/**/*.sol'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmigwi/dhamana-protocol"
  },
  "author": "dmigwi",
  "license": "ISC",
  "devDependencies": {
    "@truffle/hdwallet-provider": "2.1.13",
    "solhint": "3.4.1",
    "truffle": "5.11.1",
    "truffle-assertions": "0.9.2",
    "web3": "4.0.3"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-paratime": "1.1.1"
  }
}
